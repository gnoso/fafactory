<h1>Listing monkeys</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Gender</th>
  </tr>

<% @monkeys.each do |monkey| %>
  <tr>
    <td><%=h monkey.name %></td>
    <td><%=h monkey.age %></td>
    <td><%=h monkey.gender %></td>
    <td><%= link_to 'Show', monkey %></td>
    <td><%= link_to 'Edit', edit_monkey_path(monkey) %></td>
    <td><%= link_to 'Destroy', monkey, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New monkey', new_monkey_path %>